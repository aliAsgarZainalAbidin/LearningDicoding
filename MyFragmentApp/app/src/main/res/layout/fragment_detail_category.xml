<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin_vertical"
    tools:context=".DetailCategoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_vertical"
        android:text="Category Fragment" />

    <TextView
        android:id="@+id/tv_category_decription"
        android:layout_width="match_parent"
        android:text="Category Description"
        android:layout_marginBottom="@dimen/activity_margin_vertical"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_profile"
        android:text="Ke Halaman Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_show_dialog"
        android:text="Tampilkan Sebuah Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>